---
title: Default Layout
slug: default
is_layout: true
---

{% block body-class %}
{% case page.handle %}
{% when 'sb-coming-soon', 'sb-agency', 'sb-grayscale', 'sb-new-age', 'sb-creative', 'pet-life', 'another-one', 'visit-nepal', 'folio', 'reveal' %}
  {% comment %} DO NOTHING {% endcomment %}
{% when 'now-ui-kit-demo', 'now-ui-kit-landing-page' %}
  {% assign body_class = 'sidebar-collapse' %}
{% when 'fitness' %}
  {% assign body_class = 'mobile-shift' %}
{% when 'shards-agency-landing' %}
  {% assign body_class = 'shards-landing-page--1' %}
{% when 'shards-app-promo' %}
  {% assign body_class = 'shards-app-promo-page--1' %}
{% else %}
  {% assign body_class = 'has-sticky-footer' %}
{% endcase %}
{% endblock %}

<html lang="en">
  <head>
    {% include 'shared-head' %}

    {% block css-framework %}
      {% include 'asset' with type: 'bootstrap', version: '4.3.1' bootswatch_theme: nil %}
    {% endblock %}

    {% block css-before %}{% endblock %}

    {% block css-default %}
      {{ 'main/app' | stylesheet_tag }}
    {% endblock %}

    {% block css %}{% endblock %}

    {% block fonts-default %}
      {% comment %}
      <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic" rel="stylesheet" type="text/css">
      {% endcomment %}
    {% endblock %}

    {% block fonts %}{% endblock %}

    {% block icons-default %}
      {% include 'icons' with type: 'font-awesome-5' %}
    {% endblock %}

    {% block icons %}
    {% endblock %}

    {% block js-before %}{% endblock %}

    {% block js-default %}
      {{ 'main/app' | javascript_tag }}
    {% endblock %}

    {% block js %}{% endblock %}

    {% block head-bottom %}{% endblock %}
  </head>
  <body id="page-top" class="{{ page.handle }} {{ body_class }}">
    {% block body-top %}{% endblock %}

    {% block loader %}
      {% include 'loader' %}
    {% endblock %}

    {% block left-sidebar %}
      {% include 'left-sidebar' %}
    {% endblock %}

    {% block right-sidebar %}
      {% include 'right-sidebar' %}
    {% endblock %}

    {% block top-nav %}
      {% include 'top-nav' %}
    {% endblock %}

    <div id="page-content">
      {% block flash-notice %}
        {% include 'flash-notice' %}
      {% endblock %}

      {% block main %}{% endblock %}
    </div>
    
    {% block footer %}
      {% include 'footer' %}
    {% endblock %}

    {% block bottom-nav %}
      {% include 'bottom-nav' %}
    {% endblock %}

    {% block body-bottom %}{% endblock %}
  </body>
</html>
