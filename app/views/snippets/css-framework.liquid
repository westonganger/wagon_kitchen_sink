{% case type %}
{% when 'bootstrap' %}
  {% assign version = version | default: '4.3.1' %}

  {% if version | slice: 0 == 2 %}
    {% assign path = 'https://stackpath.bootstrapcdn.com/twitter-bootstrap/the-version/css/bootstrap-combined.min.css' | replace_first: 'the-version', version | replace_first: 'the-theme', bootswatch_theme %}
    {{ path | stylesheet_tag }}

    {% assign path = 'https://stackpath.bootstrapcdn.com/twitter-bootstrap/the-version/js/bootstrap.min.js' | replace_first: 'the-version', version %}
    {{ path | javascript_tag }}

  {% else %}
    {% if bootswatch_theme && bootswatch_theme != '' %}
      {% assign path = 'https://stackpath.bootstrapcdn.com/bootswatch/the-version/the-theme/bootstrap.min.css' | replace_first: 'the-version', version | replace_first: 'the-theme', bootswatch_theme %}
      {{ path | stylesheet_tag }}
    {% else %}
      {% assign path = 'https://stackpath.bootstrapcdn.com/bootstrap/the-version/css/bootstrap.min.css' | replace_first: 'the-version', version %}
      {{ path | stylesheet_tag }}
    {% endif %}

    {% assign path = 'https://stackpath.bootstrapcdn.com/bootstrap/the-version/js/bootstrap.bundle.min.js' | replace_first: 'the-version', version %}
    {{ path | javascript_tag }}

  {% endif %}

{% when 'bulma' %}
  {% assign version = version | default: '0.7.5' %}
  {% assign path = 'https://cdnjs.cloudflare.com/ajax/libs/bulma/the-version/css/bulma.min.css' | replace_first: 'the-version', version %}
  {{ path | stylesheet_tag }}

{% when 'materialize' %}
  {% assign version = version | default: '1.0.0' %}

  {% assign path = 'https://cdnjs.cloudflare.com/ajax/libs/materialize/the-version/css/materialize.min.css' | replace_first: 'the-version', version %}
  {{ path | stylesheet_tag }}

  {% assign path = 'https://cdnjs.cloudflare.com/ajax/libs/materialize/the-version/js/materialize.min.js' | replace_first: 'the-version', version %}
  {{ path | javascript_tag }}

{% when 'milligram' %}
  {% assign version = version | default: '1.3.0' %}
  {% assign path = 'https://cdnjs.cloudflare.com/ajax/libs/milligram/the-version/milligram.min.css' | replace_first: 'the-version', version %}
  {{ path | stylesheet_tag }}

{% when 'semantic-ui' %}
  {% assign version = version | default: '2.4.2' %}

  {% assign path = 'https://cdn.jsdelivr.net/npm/semantic-ui@the-version/dist/semantic.min.css' | replace_first: 'the-version', version %}
  {{ path | stylesheet_tag }}

  {% assign path = 'https://cdn.jsdelivr.net/npm/semantic-ui@the-version/dist/semantic.min.js' | replace_first: 'the-version', version %}
  {{ path | javascript_tag }}

{% else %}
  <script type="text/javascript">console.log("Invalid CSS Framework specified in layout: {{ type }}");</script>

{% endcase %}
