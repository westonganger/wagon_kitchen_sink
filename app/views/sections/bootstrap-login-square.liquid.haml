:css
  .login-square .form-signin {
    width: 100%;
    max-width: 330px;
    padding: 15px;
    margin: auto;
  }
  .login-square .form-signin .checkbox {
    font-weight: 400;
  }
  .login-square .form-signin .form-control {
    position: relative;
    box-sizing: border-box;
    height: auto;
    padding: 10px;
    font-size: 16px;
  }
  .login-square .form-signin .form-control:focus {
    z-index: 2;
  }
  .login-square .form-signin input[type="email"] {
    margin-bottom: -1px;
    border-bottom-right-radius: 0;
    border-bottom-left-radius: 0;
  }
  .login-square .form-signin input[type="password"] {
    margin-bottom: 10px;
    border-top-left-radius: 0;
    border-top-right-radius: 0;
  }

.login-square.white
  .card.card-signin.my-5.mx-auto(style="max-width: 500px;")
    %form.form-signin.text-center
      %img.mb-4{:alt => "", :height => "72", :src => "/images/favicon.png", :width => "72"}/
      %h1.h3.mb-3.font-weight-normal Please sign in
      %label.sr-only{:for => "inputEmail"} Email address
      %input#inputEmail.form-control{:autofocus => "", :placeholder => "Email address", :required => "", :type => "email"}/
      %label.sr-only{:for => "inputPassword"} Password
      %input#inputPassword.form-control{:placeholder => "Password", :required => "", :type => "password"}/
      .checkbox.mb-3
        %label
          %input{:type => "checkbox", :value => "remember-me"}/
          Remember me
      %button.btn.btn-lg.btn-primary.btn-block{:type => "submit"} Sign in
