---
{
  "name": "Price",
  "icon": "default",
  "keep_icon": true,
  "keep_label": true,
  "settings": [
    {
      "label": "Show Price",
      "id": "show",
      "type": "checkbox"
    },
    {
      "label": "Title",
      "id": "title",
      "type": "text"
    },
    {
      "label": "Subtitle",
      "id": "subtitle",
      "type": "text"
    },
    {
      "label": "Show Newsletter",
      "id": "shown",
      "type": "checkbox"
    },
    {
      "label": "Newsletter title",
      "id": "ntitle",
      "type": "text"
    },
    {
      "label": "Newsletter text",
      "id": "ntext",
      "type": "text"
    },
    {
      "label": "Newsletter button text",
      "id": "nbutxt",
      "type": "text"
    }
  ],
  "blocks": [
    {
      "name": "Prices",
      "type": "prices",
      "settings": [
        {
          "label": "Title",
          "id": "title",
          "type": "text"
        },
        {
          "label": "Price",
          "id": "price",
          "type": "text"
        },
        {
          "label": "Setup",
          "id": "setup",
          "type": "text"
        },
        {
          "label": "Support",
          "id": "support",
          "type": "text"
        },
        {
          "label": "Storage",
          "id": "storage",
          "type": "text"
        },
        {
          "label": "Button text",
          "id": "buttxt",
          "type": "text"
        }
      ]
    }
  ]
}
---
{% if section.settings.show == true %}
<script type="text/javascript">$("#price_lnk").css('display', 'inline-block');</script>
  <div id="price" class="section secondary-section">
    <div class="container">
      <div class="title">
        <h1>{{ section.settings.title }}</h1>
        <p>{{ section.settings.subtitle }}</p>
      </div>
      <div class="price-table row-fluid">
        {% for block in section.blocks | limit: 3 %}
        <div class="span4 price-column">
          <h3>{{ block.settings.title }}</h3>
          <ul class="list">
            <li class="price">{{ block.settings.price }}</li>
            <li>{{ block.settings.setup }}</li>
            <li>{{ block.settings.support }}</li>
            <li>{{ block.settings.storage }}</li>
          </ul>
          <a href="#" class="button button-ps">{{ block.settings.buttxt }}</a>
        </div>
        {% endfor %}
      </div>
      {% if section.settings.showc == true %}
      <div class="centered">
        <p class="price-text">{{ section.settings.ctext }}</p>
        <a href="#contact" class="button">{{ section.settings.cbutt }}</a>
      </div>
      {% endif %}
    </div>
  </div>
  {% if section.settings.shown == true %}
  <div class="section third-section">
    <div class="container newsletter">
      <div class="sub-section">
        <div class="title clearfix">
          <div class="pull-left">
            <h3>Newsletter</h3>
          </div>
        </div>
      </div>
      <div id="success-subscribe" class="alert alert-success invisible">
        <strong>Well done!</strong>You successfully subscribet to our newsletter.
      </div>
      <div class="row-fluid">
        <div class="span5">
          <p>Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam erat volutpat.</p>
        </div>
        <div class="span7">
          <form class="inline-form">
            <input type="email" name="email" id="nlmail" class="span8" placeholder="Enter your email" required />
            <button id="subscribe" class="button button-sp">Subscribe</button>
          </form>
          <div id="err-subscribe" class="error centered">Please provide valid email address.</div>
        </div>
      </div>
    </div>
  </div>
  {% endif %}
{% else %}
<script type="text/javascript">$("#price_lnk").hide()</script>
{% endif %}
