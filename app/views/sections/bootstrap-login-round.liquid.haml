---

:css
  .login-round .card-signin {
    border: 0;
    border-radius: 1rem;
    box-shadow: 0 0.5rem 1rem 0 rgba(0, 0, 0, 0.1);
    --input-padding-x: 1.5rem;
    --input-padding-y: .75rem;
  }

  .login-round .card-signin .card-title {
    margin-bottom: 2rem;
    font-weight: 300;
    font-size: 1.5rem;
  }

  .login-round .card-signin .card-body {
    padding: 2rem;
  }

  .login-round .form-signin {
    width: 100%;
  }

  .login-round .form-signin .btn {
    font-size: 80%;
    border-radius: 5rem;
    letter-spacing: .1rem;
    font-weight: bold;
    padding: 1rem;
    transition: all 0.2s;
  }

  .login-round .form-label-group {
    position: relative;
    margin-bottom: 1rem;
  }

  .login-round .form-label-group input {
    height: auto;
    border-radius: 2rem;
  }

  .login-round .form-label-group>input,
  .login-round .form-label-group>label {
    padding: var(--input-padding-y) var(--input-padding-x);
  }

  .login-round .form-label-group>label {
    position: absolute;
    top: 0;
    left: 0;
    display: block;
    width: 100%;
    margin-bottom: 0;
    /* Override default `<label>` margin */
    line-height: 1.5;
    color: #495057;
    border: 1px solid transparent;
    border-radius: .25rem;
    transition: all .1s ease-in-out;
  }

  .login-round .form-label-group input::-webkit-input-placeholder {
    color: transparent;
  }

  .login-round .form-label-group input:-ms-input-placeholder {
    color: transparent;
  }

  .login-round .form-label-group input::-ms-input-placeholder {
    color: transparent;
  }

  .login-round .form-label-group input::-moz-placeholder {
    color: transparent;
  }

  .login-round .form-label-group input::placeholder {
    color: transparent;
  }

  .login-round .form-label-group input:not(:placeholder-shown) {
    padding-top: calc(var(--input-padding-y) + var(--input-padding-y) * (2 / 3));
    padding-bottom: calc(var(--input-padding-y) / 3);
  }

  .login-round .form-label-group input:not(:placeholder-shown)~label {
    padding-top: calc(var(--input-padding-y) / 3);
    padding-bottom: calc(var(--input-padding-y) / 3);
    font-size: 12px;
    color: #777;
  }

  .login-round .btn-google {
    color: white;
    background-color: #ea4335;
  }

  .login-round .btn-facebook {
    color: white;
    background-color: #3b5998;
  }

.container.login-round
  .row
    .col-sm-9.col-md-7.col-lg-5.mx-auto
      .card.card-signin.my-5
        .card-body
          %h5.card-title.text-center Sign In

          %form.form-signin
            .form-label-group
              %input#inputEmail.form-control{:autofocus => "", :placeholder => "Email address", :required => "", :type => "email"}/
              %label{:for => "inputEmail"} Email address

            .form-label-group
              %input#inputPassword.form-control{:placeholder => "Password", :required => "", :type => "password"}/
              %label{:for => "inputPassword"} Password

            .custom-control.custom-checkbox.mb-3
              %input#customCheck1.custom-control-input{:type => "checkbox"}/
              %label.custom-control-label{:for => "customCheck1"} Remember password

            %button.btn.btn-lg.btn-primary.btn-block.text-uppercase{:type => "submit"} Sign in

            %hr.my-4/

            %button.btn.btn-lg.btn-google.btn-block.text-uppercase{:type => "submit"}
              %i.fab.fa-google.mr-2
              Sign in with Google

            %button.btn.btn-lg.btn-facebook.btn-block.text-uppercase{:type => "submit"}
              %i.fab.fa-facebook-f.mr-2
              Sign in with Facebook
